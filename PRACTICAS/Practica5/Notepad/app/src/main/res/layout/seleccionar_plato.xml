<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/boton_ordenar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordenar por"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="96dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="42dp"
        android:layout_height="41dp"
        app:srcCompat="@mipmap/ordenar"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="103dp" />

    <TextView
        android:id="@+id/selecciona_plato"
        android:layout_width="233dp"
        android:layout_height="37dp"
        android:text="Seleccione el plato"
        android:textAlignment="center"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="31dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="72dp"
        android:layout_height="67dp"
        app:srcCompat="@mipmap/volver_atras"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <LinearLayout
        android:layout_width="209dp"
        android:layout_height="34dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="166dp">

        <TextView
            android:id="@+id/producto"
            android:layout_width="207dp"
            android:layout_height="32dp"
            android:text="Arroz tres delicias"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/boton_anyadir"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:text="+"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="161dp" />

    <Button
        android:id="@+id/boton_quitar"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="340dp"
        tools:layout_editor_absoluteY="161dp" />

    <TextView
        android:id="@+id/num_cantidad_plato"
        android:layout_width="38dp"
        android:layout_height="33dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="292dp"
        tools:layout_editor_absoluteY="161dp" />

</androidx.constraintlayout.widget.ConstraintLayout>