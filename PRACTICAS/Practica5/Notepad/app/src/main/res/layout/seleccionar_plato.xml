<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/boton_ordenar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordenar por"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="42dp"
        android:layout_height="41dp"
        app:srcCompat="@mipmap/ordenar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="103dp" />

    <TextView
        android:id="@+id/selecciona_plato"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:text="Seleccione el plato"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_ordenar2"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="31dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="72dp"
        android:layout_height="67dp"
        app:srcCompat="@mipmap/volver_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selecciona_plato"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/boton_anyadir"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:text="+"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/selecciona_plato" />

    <LinearLayout
        android:layout_width="297dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/boton_quitar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/boton_anyadir"
        app:layout_constraintTop_toBottomOf="@+id/selecciona_plato"
        tools:ignore="NotSibling">

        <TextView
            android:id="@+id/producto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Arroz tres delicias"
            android:textSize="20sp" />

        <Button
            android:id="@+id/boton_quitar"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:text="-"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/producto" />

    </LinearLayout>

    <TextView
        android:id="@+id/num_cantidad_plato"
        android:layout_width="38dp"
        android:layout_height="33dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/boton_anyadir"
        app:layout_constraintTop_toBottomOf="@+id/selecciona_plato" />

</androidx.constraintlayout.widget.ConstraintLayout>
